= form_for @user_connection do |f|
  - if @user_connection.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_connection.errors.count, "error")} prohibited this user_connection from being saved:"
      %ul
        - @user_connection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_1_id
    = f.number_field :user_1_id
  .field
    = f.label :user_2_id
    = f.number_field :user_2_id
  .field
    = f.label :interacted
    = f.check_box :interacted
  .field
    = f.label :negative_connection
    = f.check_box :negative_connection
  .actions
    = f.submit 'Save'
