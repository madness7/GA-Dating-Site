
<%= hidden_field_tag("current_user", value = current_user.id.to_i) %>

 <div class="info_box">
 <% if current_user.image_1 %>
  <div class="profile_image">
    <%= image_tag current_user.image_1, width: 200 %>
  </div>
 <% end %>

   <div class="basic">
      <p class="profile">
      <b>Name:</b>
      <%= current_user.first_name %><%= current_user.last_name %>
      </p>

   <p class="profile">
     <b>Gender</b>
     <%= current_user.gender %>
   </p>
   <p class="profile">
     <b>Looking for</b>
     <%= current_user.looking_for %>
   </p>

   <p class="profile">
     <b>Date of Birth</b>
     <%= current_user.dob %>
   </p>
  <button><%= link_to 'Random Partner Search', users_path %></button>

   </div>
</div>


 <p id="about_me" class="profile">
   <b>About me</b>
   <%= current_user.about_me %>
 </p>

 

 <div class="content">
   <div id="msg_slideshow" class="msg_slideshow">
       <div id="msg_wrapper" class="msg_wrapper">
         </div>
       <div id="msg_controls" class="msg_controls"><!-- right has to animate to 15px, default -110px -->
         
         <a href="#" id="msg_prev" class="msg_prev"></a>
         <a href="#" id="msg_pause_play" class="msg_pause"></a><!-- has to change to msg_play if paused-->
         <a href="#" id="msg_next" class="msg_next"></a>
       </div>
       <div id="msg_thumbs" class="msg_thumbs"><!-- top has to animate to 0px, default -230px -->
           <div class="msg_thumb_wrapper">
           <a href="#"><%= image_tag current_user.image_1, width: 200, alt:current_user.image_1  %></a>
           <a href="#"><%= image_tag current_user.image_2, width: 200, alt:current_user.image_2  %></a>
           <a href="#"><%= image_tag current_user.image_3, width: 200, alt:current_user.image_3  %></a>
           </div>
         <a href="#" id="msg_thumb_next" class="msg_thumb_next"></a>
         <a href="#" id="msg_thumb_prev" class="msg_thumb_prev"></a>
         <a href="#" id="msg_thumb_close" class="msg_thumb_close"></a>
         <span class="msg_loading"></span><!-- show when next thumb wrapper loading -->
         </div>
   </div>
 </div>


      
        




      
        

